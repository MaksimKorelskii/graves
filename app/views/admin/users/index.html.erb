<% provide :page_title, t('menu.users') %>
<% currently_at t('menu.users') %>

<h1 class="mb-4">Admin Users</h1>

<%= pagination @pagy %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t('activerecord.attributes.user.name')%></th>
      <th scope="col"><%= t('activerecord.attributes.user.role')%></th>
      <th scope="col"><%= t('activerecord.attributes.user.email')%></th>
      <th scope="col"><%= t('activerecord.attributes.user.created_at')%></th>
      <th scope="col"><%= t('.action')%></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%= pagination @pagy %>
